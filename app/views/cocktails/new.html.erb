<h1 class="text-center">create new cocktail</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.submit "add a new cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
