<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://lorempixel.com/1000/800/food');">
  <div class="banner-content">
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">
          <h1><%= @cocktail.name %></h1>
          <ul>
            <% @cocktail.doses.all.each do |d| %>
            <li><%= d.description %> of <%= d.ingredient.name %><%= link_to "delete dose", cocktail_dose_path(@cocktail, d), class: "btn btn-danger", method: :delete %></li>
            <% end %>
            <li><%= link_to "create a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
